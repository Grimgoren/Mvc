{% extends "base.html.twig" %}
{% block body %}

{% if deckCount == 52 %}
    <h2>Dealer</h2>
    <ul>
        <p>Kort kvar: {{ deckCount }}</p>
    </ul>
    <h2>Spelare</h2>
    <button onclick="location.href='{{ path('blackjack') }}'" type="button">Startade inte spelet? Tryck här!</button>
{% endif %}

{% if class != "finish" %}
    {% if deckCount < 52 %}
        <h2>Dealer</h2>
        <ul>
            <p>Kort kvar: {{ deckCount }}</p>
            <div class="card-container">
                {% for card in dealerCards %}
                    <div class="allcards
                        {% if loop.index == 1 %}
                            {% if card.getSuit() == 'Hearts' %}
                                heart
                            {% elseif card.getSuit() == 'Diamonds' %}
                                diamond
                            {% elseif card.getSuit() == 'Clubs' %}
                                club
                            {% else %}
                                spade
                            {% endif %}
                        {% else %}
                            back
                        {% endif %}
                    ">
                        <p>
                            {% if loop.index == 1 %}
                                {{ card.getAsString() }}
                            {% else %}
                                ?
                            {% endif %}
                        </p>
                    </div>
                {% endfor %}
            </div>
        </ul>
    {% endif %}
{% endif %}

{% if class != "finish" %}
    {% if deckCount < 52 %}
            {% if dealerCards|length > 2 %}
            <h2>Dealer</h2>
                <ul>
                    <p>Kort kvar: {{ deckCount }}</p>
                    <p>Poäng: {{ dealerValue }}</p>
                    <div class="card-container">
                        {% for card in dealerCards %}
                            <div class="allcards
                                {% if card.getSuit() == 'Hearts' %}
                                    heart
                                {% elseif card.getSuit() == 'Diamonds' %}
                                    diamond
                                {% elseif card.getSuit() == 'Clubs' %}
                                    club
                                {% else %}
                                    spade
                                {% endif %}
                            ">
                                <p>{{ card.getAsString() }}</p>
                            </div>
                        {% endfor %}
                    </div>
                    {% endif %}
                </ul>
    {% endif %}
{% endif %}

